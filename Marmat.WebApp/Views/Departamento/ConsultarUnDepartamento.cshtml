@model Marmat.WebApp.Models.DepartamentoViewModel

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Detalles</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdDepartamento)
            </dd>
            <dt class="col-sm-2">
                Cantidad de Cuartos
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CantidadCuartos)
            </dd>
            <dt class="col-sm-2">
                Cantidad de Baños
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CantidadBanios)
            </dd>
            <dt class="col-sm-2">
                Descripción
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt class="col-sm-2">
                Imagen
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Imagen)
            </dd>
            <dt class="col-sm-2">
                Usuario
            </dt>
            <dd class="col-sm-10">
                @if (Model.IdUsuario != null)
                {
                    @Html.DisplayFor(model => model.usuario.NombreUsuario)
                }
                else
                {
                    @Html.DisplayFor(model => model.IdUsuario)

                }
            </dd>
            <dt class="col-sm-2">
                Condominio
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.condominio.NombreCondominio)
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("EDITAR", "ActualizarDepartamento", new {  id = Model.IdDepartamento  }) |
        <a asp-action="MantenimientoDepartamento">VOLVER A LA LISTA</a>
    </div>
</div>
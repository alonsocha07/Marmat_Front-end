@model Marmat.WebApp.Models.DepartamentoViewModel

@{
    ViewData["Title"] = "Eliminar Departamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Eliminar Departamento</h1>

    <h3 class="h3">¿Está seguro de eliminar esto?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdDepartamento)
            </dd>
            <dt class="col-sm-2">
                Cantidad de Cuartos
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CantidadCuartos)
            </dd>
            <dt class="col-sm-2">
                Cantidad de Baños
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CantidadBanios)
            </dd>
            <dt class="col-sm-2">
                Descripción
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt class="col-sm-2">
                Imagen
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Imagen)
            </dd>
            <dt class="col-sm-2">
                Usuario
            </dt>
            <dd class="col-sm-10">
                @if (Model.IdUsuario != null)
                {
                    @Html.DisplayFor(model => model.usuario.NombreUsuario)
                }
                else
                {
                    @Html.DisplayFor(model => model.IdUsuario)
                }
            </dd>
            <dt class="col-sm-2">
                Condominio
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.condominio.NombreCondominio)
            </dd>
        </dl>

        <form asp-action="EliminarDepartamento">
            @Html.HiddenFor(Model=>Model.IdDepartamento)
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="MantenimientoDepartamento">VOLVER A LA LISTA</a>
        </form>
    </div>
</div>
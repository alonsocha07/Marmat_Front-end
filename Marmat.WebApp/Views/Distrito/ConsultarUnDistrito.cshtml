@model Marmat.WebApp.Models.DistritoViewModel

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Detalles</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdDistrito)
            </dd>
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreDistrito)
            </dd>
            <dt class="col-sm-2">
                Cantón
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.canton.NombreCanton)
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("EDITAR", "ActualizarDistrito", new {  id = Model.IdDistrito  }) |
        <a asp-action="MantenimientoDistrito">VOLVER A LA LISTA</a>
    </div>
</div>
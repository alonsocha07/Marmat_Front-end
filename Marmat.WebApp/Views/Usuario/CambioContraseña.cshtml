@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@model Marmat.WebApp.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Cambio de Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h1" style="text-align:center;">Cambio de Contraseña</h1>


<hr />
<div class="container" style="display:flex; justify-content:center;">
    <div class="col-md-4">
        <form asp-action="CambioContraseña">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreUsuario" class="control-label">Usuario</label>
                <input asp-for="NombreUsuario" class="form-control" readonly="readonly  />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pass" class="control-label">Contraseña</label>
                <input asp-for="Pass" class="form-control" type="password" value="" required oninvalid="this.setCustomValidity('La contraseña es requerida')" onchange="this.setCustomValidity('')" />
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar contraseña" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="form-group text-center">
        @if (Accessor.HttpContext.Session.GetInt32("Rol") == 2)
        {
            <button onclick="location.href='@Url.Action("UsuarioHome","UsuarioHome")'" class="btn btn-default btn-lg rounded-lg"><i class="fa fa-user" aria-hidden="true"> Volver al menú</i></button>
        }
        else
        {
            <button onclick="location.href='@Url.Action("Administrador","Administrador")'" class="btn btn-default btn-lg rounded-lg"><i class="fa fa-user" aria-hidden="true"> Volver al menú</i></button>
        }
    </div>
</div>

@model Marmat.WebApp.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Eliminar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Eliminar Usuario</h1>

    <h3 class="h3">¿Está seguro de eliminar esto?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdUsuario)
            </dd>
            <dt class="col-sm-2">
                Nombre de Usuario
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreUsuario)
            </dd>
            <dt class="col-sm-2">
                Correo
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Correo)
            </dd>
            <dt class="col-sm-2">
                Contraseña
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Pass)
            </dd>
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                Primer Apellido
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrimerApellido)
            </dd>
            <dt class="col-sm-2">
                Segundo Apellido
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SegundoApellido)
            </dd>
            <dt class="col-sm-2">
                Numero Telefónico
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumeroTel)
            </dd>
            <dt class="col-sm-2">
                Rol
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.rol.NombreRol)
            </dd>
        </dl>

        <form asp-action="EliminarUsuario">
            @Html.HiddenFor(Model=>Model.IdUsuario)
            <input type="submit" value="ELIMINAR" class="btn btn-danger" />
            <a asp-action="MantenimientoUsuario">VOLVER A LA LISTA</a>
        </form>
    </div>
</div>
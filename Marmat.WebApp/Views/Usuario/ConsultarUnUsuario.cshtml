@model Marmat.WebApp.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Detalles</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdUsuario)
            </dd>
            <dt class="col-sm-2">
                Nombre de Usuario
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreUsuario)
            </dd>
            <dt class="col-sm-2">
                Correo
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Correo)
            </dd>
            <dt class="col-sm-2">
                Contraseña
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Pass)
            </dd>
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                Primer Apellido
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrimerApellido)
            </dd>
            <dt class="col-sm-2">
                Segundo Apellido
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SegundoApellido)
            </dd>
            <dt class="col-sm-2">
                Número Telefónico
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumeroTel)
            </dd>
            <dt class="col-sm-2">
                Rol
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.rol.NombreRol)
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("EDITAR", "ActualizarUsuario", new {  id = Model.IdUsuario  }) |
        <a asp-action="MantenimientoUsuario">VOLVER A LA LISTA</a>
    </div>
</div>
@model Marmat.WebApp.Models.RolViewModel

@{
    ViewData["Title"] = "Eliminar Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Eliminar Rol</h1>

    <h3 class="h3">¿Está seguro de eliminar esto?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdRol)
            </dd>
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreRol)
            </dd>
        </dl>

        <form asp-action="EliminarRol">
            @Html.HiddenFor(Model=>Model.IdRol)
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="MantenimientoRol">VOLVER A LA LISTA</a>
        </form>
    </div>
</div>
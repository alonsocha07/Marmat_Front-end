@model Marmat.WebApp.Models.RolViewModel

@{
    ViewData["Title"] = "Registrar Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Registrar Rol</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="RegistrarRol">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="NombreRol" class="control-label">Nombre</label>
                    <input asp-for="NombreRol" class="form-control" required oninvalid="this.setCustomValidity('El nombre es requerido')" onchange="this.setCustomValidity('')"/>
                    <span asp-validation-for="NombreRol" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                    <a asp-action="MantenimientoRol">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@model IEnumerable<Marmat.WebApp.Models.BoletinViewModel>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <br />
    <h2 class="h2 text-center">Bienvenido, @Accessor.HttpContext.Session.GetString("NombreUsuario")</h2>
    @if (Model.Count() > 0)
    {
        <div class="row">
            <div class="col d-flex justify-content-center">
                <div class="card text-center" style="width:18rem; margin:0 auto;">

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item list-group-item-warning">Boletín informativo</li>
                        @foreach (var item in Model)
                        {
                            <li class="list-group-item">@item.Comentario</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

    }
    <div class="row text-center">
        <div class="col-md-6">
            <button type="button" onclick="location.href='@Url.Action("AvisoHome","UsuarioHome")'" class="btn btn-default btn-lg btn-block rounded-lg"><i class="fa fa-calendar" aria-hidden="true"> Aviso de Visitas</i></button>
            <br/>
        </div>
        <div class="col-md-6">
            <button type="button" onclick="location.href='@Url.Action("MantenimientoReservaCliente","Reserva")'" class="btn btn-default btn-lg btn-block rounded-lg"><i class="fa fa-calendar" aria-hidden="true"> Reserva de Áreas Comunes</i></button>
            <br />
        </div>
        <br />
    </div>
</div>
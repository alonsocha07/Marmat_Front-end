@model Marmat.WebApp.Models.BoletinViewModel

@{
    ViewData["Title"] = "Editar Boletin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Editar Boletin</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ActualizarBoletin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdBoletin" class="control-label">ID</label>
                    <input asp-for="IdBoletin" class="form-control" readonly="readonly" />
                    <span asp-validation-for="IdBoletin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaInicio" class="control-label">Fecha Inicio</label>
                    <input asp-for="FechaInicio" class="form-control" type="date" />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaFinal" class="control-label">Fecha Final</label>
                    <input asp-for="FechaFinal" class="form-control" type="date" />
                    <span asp-validation-for="FechaFinal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comentario" class="control-label">Comentario</label>
                    <input asp-for="Comentario" class="form-control" required oninvalid="this.setCustomValidity('El comentario es requerido')" onchange="this.setCustomValidity('')" />
                    <span asp-validation-for="Comentario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="EDITAR" class="btn btn-primary" />
                    <a asp-action="MantenimientoBoletin">VOLVER A LA LISTA</a>
                </div>
            </form>
        </div>
    </div>
</div>

@model Marmat.WebApp.Models.BoletinViewModel

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Detalles</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdBoletin)
            </dd>
            <dt class="col-sm-2">
                Fecha Inicio
            </dt>
            <dd class="col-sm-10">
                @Model.FechaInicio.ToString("MM/dd/yyyy")
            </dd>
            <dt class="col-sm-2">
                Fecha Final
            </dt>
            <dd class="col-sm-10">
                @Model.FechaFinal.ToString("MM/dd/yyyy")
            </dd>
            <dt class="col-sm-2">
                Comentario
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comentario)
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("EDITAR", "ActualizarBoletin", new {  id = Model.IdBoletin  }) |
        <a asp-action="MantenimientoBoletin">VOLVER A LA LISTA</a>
    </div>
</div>
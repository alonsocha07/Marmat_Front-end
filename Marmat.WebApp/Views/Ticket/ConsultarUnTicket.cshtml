@model Marmat.WebApp.Models.TicketViewModel

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Detalles</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdTicket)
            </dd>
            <dt class="col-sm-2">
                Descripción
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt class="col-sm-2">
                Estado
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.estado.NombreEstado)
            </dd>
            <dt class="col-sm-2">
                Usuario
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.usuario.NombreUsuario)
            </dd>
            <dt class="col-sm-2">
                Departamento
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.departamento.Descripcion)
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("EDITAR", "ActualizarTicket", new {  id = Model.IdTicket }) |
        <a asp-action="MantenimientoTicket">VOLVER A LA LISTA</a>
    </div>
</div>
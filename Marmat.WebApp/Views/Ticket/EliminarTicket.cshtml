@model Marmat.WebApp.Models.TicketViewModel

@{
    ViewData["Title"] = "Eliminar Ticket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Eliminar Ticket</h1>

    <h3 class="h3">¿Está seguro de eliminar esto?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdTicket)
            </dd>
            <dt class="col-sm-2">
                Descripción
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt class="col-sm-2">
                Estado
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.estado.NombreEstado)
            </dd>
            <dt class="col-sm-2">
                Usuario
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.usuario.NombreUsuario)
            </dd>
            <dt class="col-sm-2">
                Departamento
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.departamento.Descripcion)
            </dd>
        </dl>

        <form asp-action="EliminarTicket">
            @Html.HiddenFor(Model=>Model.IdTicket)
            <input type="submit" value="ELIMINAR" class="btn btn-danger" />
            <a asp-action="MantenimientoTicket">VOLVER A LA LISTA</a>
        </form>
    </div>
</div>
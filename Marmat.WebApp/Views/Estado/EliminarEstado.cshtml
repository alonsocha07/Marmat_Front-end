@model Marmat.WebApp.Models.EstadoViewModel

@{
    ViewData["Title"] = "Eliminar Estado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Eliminar Estado</h1>

    <h3 class="h3">¿Está seguro de eliminar esto?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdEstado)
            </dd>
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreEstado)
            </dd>
        </dl>

        <form asp-action="EliminarEstado">
            @Html.HiddenFor(Model=>Model.IdEstado)
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="MantenimientoEstado">VOLVER A LA LISTA</a>
        </form>
    </div>
</div>
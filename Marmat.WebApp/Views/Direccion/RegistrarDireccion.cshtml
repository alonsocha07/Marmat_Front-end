@model Marmat.WebApp.Models.DireccionViewModel

@{
    ViewData["Title"] = "RegistrarDireccion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Registrar Direccion</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="RegistrarDireccion">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="NombreDireccion" class="control-label">Nombre</label>
                    <input asp-for="NombreDireccion" class="form-control" required oninvalid="this.setCustomValidity('El nombre es requerido')" onchange="this.setCustomValidity('')"/>
                    <span asp-validation-for="NombreDireccion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdDistrito" class="control-label">Distrito</label>
                    @Html.DropDownListFor(model => model.IdDistrito, new SelectList(Model.distritos, "IdDistrito", "NombreDistrito"), "--Seleccionar--", new{@class="form-control"})
                    <span asp-validation-for="IdDistrito" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                    <a asp-action="MantenimientoDireccion">VOLVER A LA LISTA</a>
                </div>
            </form>
        </div>
    </div>
</div>
@model Marmat.WebApp.Models.DireccionViewModel

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Detalles</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdDireccion)
            </dd>
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreDireccion)
            </dd>
            <dt class="col-sm-2">
                Distrito
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.distrito.NombreDistrito)
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("EDITAR", "ActualizarDireccion", new {  id = Model.IdDireccion  }) |
        <a asp-action="MantenimientoDireccion">VOLVER A LA LISTA</a>
    </div>
</div>
@model Marmat.WebApp.Models.ComentarioTicketViewModel

@{
    ViewData["Title"] = "Eliminar Comentario Ticket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Eliminar Comentario Ticket</h1>

    <h3 class="h3">¿Está seguro de eliminar esto?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdComentarioTicket)
            </dd>
            <dt class="col-sm-2">
                Fecha
            </dt>
            <dd class="col-sm-10">
                @Model.Fecha.ToString("MM/dd/yyyy")
            </dd>
            <dt class="col-sm-2">
                Comentario
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comentario)
            </dd>
            <dt class="col-sm-2">
                Ticket
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ticket.Descripcion)
            </dd>
        </dl>

        <form asp-action="EliminarComentarioTicket">
            @Html.HiddenFor(Model=>Model.IdComentarioTicket)
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="MantenimientoComentarioTicket">VOLVER A LA LISTA</a>
        </form>
    </div>
</div>

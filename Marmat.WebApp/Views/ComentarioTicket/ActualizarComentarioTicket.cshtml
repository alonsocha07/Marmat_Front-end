@model Marmat.WebApp.Models.ComentarioTicketViewModel

@{
    ViewData["Title"] = "Editar Canton";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Editar Comentario Ticket</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ActualizarComentarioTicket">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdComentarioTicket" class="control-label">ID</label>
                    <input asp-for="IdComentarioTicket" class="form-control" readonly="readonly" />
                    <span asp-validation-for="IdComentarioTicket" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fecha" class="control-label">Fecha</label>
                    <input asp-for="Fecha" class="form-control" type="date"/>
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comentario" class="control-label">Comentario</label>
                    <input asp-for="Comentario" class="form-control" required oninvalid="this.setCustomValidity('El comentario es requerido')" onchange="this.setCustomValidity('')" />
                    <span asp-validation-for="Comentario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdTicket" class="control-label">Ticket</label>
                    @Html.DropDownListFor(model => model.IdTicket, new SelectList(Model.tickets, "IdTicket", "Descripcion"), "--Seleccionar--", new{@class="form-control"})
                    <span asp-validation-for="IdTicket" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="EDITAR" class="btn btn-primary" />
                    <a asp-action="MantenimientoComentarioTicket">VOLVER A LA LISTA</a>
                </div>
            </form>
        </div>
    </div>
</div>

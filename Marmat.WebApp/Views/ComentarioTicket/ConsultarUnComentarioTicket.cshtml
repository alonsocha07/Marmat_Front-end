@model Marmat.WebApp.Models.ComentarioTicketViewModel

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Detalles</h1>

    <div>
        <h4>ComentarioTicketiewModel</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdComentarioTicket)
            </dd>
            <dt class="col-sm-2">
                Fecha
            </dt>
            <dd class="col-sm-10">
                @Model.Fecha.ToString("MM/dd/yyyy")
            </dd>
            <dt class="col-sm-2">
                Comentario
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comentario)
            </dd>
            <dt class="col-sm-2">
                Ticket
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ticket.Descripcion)
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("EDITAR", "ActualizarComentarioTicket", new {  id = Model.IdComentarioTicket  }) |
        <a asp-action="MantenimientoComentarioTicket">VOLVER A LA LISTA</a>
    </div>
</div>
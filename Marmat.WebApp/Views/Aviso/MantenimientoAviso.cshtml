@model IEnumerable<Marmat.WebApp.Models.AvisoViewModel>

@{
    ViewData["Title"] = "Mantenimiento Aviso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet" />
}
<div class="container-fluid">
    <h1 class="h1">Mantenimiento Aviso</h1>

    <p>
        <a asp-action="RegistrarAviso">Crear nuevo Aviso</a>
    </p>
    <table table id="TablaMantenimiento" class="display" style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Usuario
                </th>
                <th>
                    Fecha
                </th>
                <th>
                    Comentario
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdAviso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.usuario.NombreUsuario)
                    </td>
                    <td>
                        @item.Fecha.ToString("MM/dd/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comentario)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "ActualizarAviso", new {  id=item.IdAviso  })<br />
                        @Html.ActionLink("Detalles", "ConsultarUnAviso", new {  id=item.IdAviso  })<br />
                        @Html.ActionLink("Eliminar", "EliminarAviso", new {  id=item.IdAviso  })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <div class="form-group text-center">
            <button onclick="location.href='@Url.Action("Administrador","Administrador")'" class="btn btn-default btn-lg rounded-lg"><i class="fa fa-user" aria-hidden="true"> Volver al inicio</i></button>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="~/js/DataTables/MantenimientoDataTable.js"></script>
}
@model Marmat.WebApp.Models.AvisoViewModel

@{
    ViewData["Title"] = "Registrar Aviso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Registrar Aviso</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="RegistrarAviso">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="IdUsuario" class="control-label">Usuario</label>
                    @Html.DropDownListFor(model => model.IdUsuario, new SelectList(Model.usuarios, "IdUsuario", "NombreUsuario"), "--Seleccionar--", new{@class="form-control"})
                    <span asp-validation-for="IdUsuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fecha" class="control-label">Fecha</label>
                    <input asp-for="Fecha" class="form-control" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comentario" class="control-label">Comentario</label>
                    <input asp-for="Comentario" class="form-control" required oninvalid="this.setCustomValidity('El comentario es requerido')" onchange="this.setCustomValidity('')" />
                    <span asp-validation-for="Comentario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                    <a asp-action="MantenimientoAviso">VOLVER A LA LISTA</a>
                </div>
            </form>
        </div>
    </div>
</div>


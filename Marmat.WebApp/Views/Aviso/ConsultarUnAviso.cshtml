@model Marmat.WebApp.Models.AvisoViewModel

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Detalles</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdAviso)
            </dd>
            <dt class="col-sm-2">
                Usuario
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.usuario.NombreUsuario)
            </dd>
            <dt class="col-sm-2">
                Fecha
            </dt>
            <dd class="col-sm-10">
                @Model.Fecha.ToString("MM/dd/yyyy")
            </dd>
            <dt class="col-sm-2">
                Comentario
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comentario)
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("EDITAR", "ActualizarAviso", new {  id = Model.IdAviso, @class="btn btn-primary" }) |
        <a asp-action="MantenimientoAviso">VOLVER A LA LISTA</a>
    </div>
</div>
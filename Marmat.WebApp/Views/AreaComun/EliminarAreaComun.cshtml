@model Marmat.WebApp.Models.AreacomunViewModel

@{
    ViewData["Title"] = "Eliminar Área Común";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="h1">Eliminar Área Común</h1>

    <h3 class="h3">¿Está seguro de eliminar esto?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdAreacomun)
            </dd>
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreAreacomun)
            </dd>
        </dl>

        <form asp-action="EliminarAreaComun">
            @Html.HiddenFor(Model=>Model.IdAreacomun)
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="MantenimientoAreaComun">VOLVER A LA LISTA</a>
        </form>
    </div>
</div>
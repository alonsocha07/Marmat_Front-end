@model IEnumerable<Marmat.WebApp.Models.AreacomunViewModel>

@{
    ViewData["Title"] = "Mantenimiento de Área Común";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet" />
}
<div class="container-fluid">
    <h1 class="h1">Mantenimiento Área Común</h1>

    <p>
        <a asp-action="RegistrarAreaComun">Crear nueva Área Común</a>
    </p>
    <table table id="TablaMantenimiento" class="display" style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Nombre
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdAreacomun)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreAreacomun)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "ActualizarAreaComun", new { id=item.IdAreacomun })<br />
                        @Html.ActionLink("Detalles", "ConsultarUnAreaComun", new { id=item.IdAreacomun })<br />
                        @Html.ActionLink("Eliminar", "EliminarAreaComun", new { id=item.IdAreacomun })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <div class="form-group text-center">
            <button onclick="location.href='@Url.Action("Administrador","Administrador")'" class="btn btn-default btn-lg rounded-lg"><i class="fa fa-user" aria-hidden="true"> Volver al inicio</i></button>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="~/js/DataTables/MantenimientoDataTable.js"></script>
}
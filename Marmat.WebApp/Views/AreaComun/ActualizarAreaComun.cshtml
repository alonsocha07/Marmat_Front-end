@model Marmat.WebApp.Models.AreacomunViewModel

@{
    ViewData["Title"] = "Editar Área Común";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="h1">Editar Área Común</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ActualizarAreaComun">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdAreacomun" class="control-label"></label>
                    <input asp-for="IdAreacomun" class="form-control" readonly/>
                    <span asp-validation-for="IdAreacomun" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NombreAreacomun" class="control-label"></label>
                    <input asp-for="NombreAreacomun" class="form-control" required oninvalid="this.setCustomValidity('El nombre es requerido')" onchange="this.setCustomValidity('')" />
                    <span asp-validation-for="NombreAreacomun" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Editar" class="btn btn-primary" />
                    <a asp-action="MantenimientoAreaComun">VOLVER A LA LISTA</a>
                </div>
            </form>
        </div>
    </div>
</div>



@model Marmat.WebApp.Models.CantonViewModel

@{
    ViewData["Title"] = "Registrar Canton";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Registrar Canton</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="RegistrarCanton">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="NombreCanton" class="control-label">Nombre</label>
                    <input asp-for="NombreCanton" class="form-control" required oninvalid="this.setCustomValidity('El nombre es requerido')" onchange="this.setCustomValidity('')"/>
                    <span asp-validation-for="NombreCanton" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdProvincia" class="control-label">Provincia</label>
                    @Html.DropDownListFor(model => model.IdProvincia, new SelectList(Model.provincias, "IdProvincia", "NombreProvincia"), "--Seleccionar--", new{@class="form-control"})
                    <span asp-validation-for="IdProvincia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                    <a asp-action="MantenimientoCanton">VOLVER A LA LISTA</a>
                </div>
            </form>
        </div>
    </div>
</div>
@model Marmat.WebApp.Models.CantonViewModel

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1 class="h1">Detalles</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdCanton)
            </dd>
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreCanton)
            </dd>
            <dt class="col-sm-2">
                Provincia
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.provincia.NombreProvincia)
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("EDITAR", "ActualizarCanton", new {  id = Model.IdCanton  }) |
        <a asp-action="MantenimientoCanton">VOLVER A LA LISTA</a>
    </div>
</div>